@{
    ViewData["Title"] = "Dashboard";
    var nome = Context.Session.GetString("UsuarioNome");
    var dep = Context.Session.GetString("UsuarioDepartamento");
}

<div class="main-container dashboard">
    <aside class="sidebar dashboard-sidebar">
        <div class="user-box">
            <div class="user-icon">👤</div>
            <span>Olá, @nome!</span>
            <span>Departamento: @dep</span>
        </div>

        <nav class="menu-dashboard">
            <a asp-controller="Home" asp-action="Index" class="menu-item">
                <i class="icon">🏠</i>
                <span>Tela Inicial</span>
            </a>
            <a asp-controller="Home" asp-action="ChamadosAbertos" class="menu-item">
                <i class="icon">📋</i>
                <span>Todos os chamados</span>
            </a>
            <a asp-controller="Home" asp-action="AbrirNovoChamado" class="menu-item">
                <i class="icon">➕</i>
                <span>Abrir novo chamado</span>
            </a>
            <a asp-controller="Chat" asp-action="Index" class="menu-item">
                <i class="icon">💬</i>
                <span>ChatBot Ajuda</span>
            </a>
        </nav>
    </aside>

    <section class="content dashboard-content">
        <h1>Bem-vindo, @nome!</h1>
        <div class="logout-icon">
            <!--<a asp-controller="Home" asp-action="Index">➡️</a>-->
        </div>
    </section>
    
</div>


